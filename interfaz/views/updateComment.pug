extends layout

block content
    .w3-card-4
        header.w3-container.w3-black
            h2 Update comment to rute #{rute}
        
        form.w3-container(method="POST")
            fieldset
                legend Metadata, Please separate by commas the array fields
                label Text
                input.w3-input.w3-round(type="text" name="text" value = comment.text)
                label Data(s)
                input.w3-input.w3-round(type="text" name="data" value = comment.data)
                label Lugar(es)
                input.w3-input.w3-round(type="text" name="lugar" value = comment.lugar)
                label Entidade(s)
                input.w3-input.w3-round(type="text" name="entidade" value = comment.entidade)
                        
            button.w3-btn.w3-black.w3-mb-2(type="submit") Update

        footer.w3-container.w3-black
            h5 Generated by Mercurio Verde Hopson