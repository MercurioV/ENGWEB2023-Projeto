extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Register Form
    form.w3-container(method="POST")
        fieldset 
            legend Credenciais: 
            label e-mail 
            input.w3-input(type="text" name="username")
            label Password 
            input.w3-input(type="password" name="password")
            label Name 
            input.w3-input(type="text" name="name")
            br
            input#data(type="radio" name="option" value="Normal")
            label(for='data') Normal
            br
            input#lugar(type="radio" name="option" value="Moderator")
            label(for='lugar') Moderator
        input.w3-btn.w3-blue(type="submit" value="Send")
    footer.w3-container.w3-teal
        address Generated by NodeJs auth demo

