extends layout

block content
    .w3-card-4
        header.w3-container.w3-black
            h2 Update house #{house.numero} from rute #{rute}
        
        form.w3-container(method="POST")
            fieldset
                legend Metadata
                label Enfiteuta
                input.w3-input.w3-round(type="text" name="enfiteuta" value = house.enfiteuta)
                label Foro
                input.w3-input.w3-round(type="text" name="foro" value = house.foro)
                        
            button.w3-btn.w3-black.w3-mb-2(type="submit") Update

        footer.w3-container.w3-black
            h5 Generated by Mercurio Verde Hopson
